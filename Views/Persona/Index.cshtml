@model IEnumerable<ViewModel.ViewModels.PersonaVM>

@{
    ViewData["Title"] = "Index";
}

<h1>Registro de personas</h1>

<p>
    <a asp-action="Create">Crear Nuevo registro</a>
</p>
<div class="table-responsive">
    <table class="table table-striped table-bordered table-condensed">
        <thead>
            <tr>

                <th>
                    @Html.DisplayNameFor(model => model.NumeroDocumento)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.TipoDocumento)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Genero)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.OrientacionSexual)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Nombres)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Apellidos)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.IdentidadGenero)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Edad)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Etnia)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Telefono)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Localidad)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.EsVictimaConflictoA)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.EsDiscapacitado)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.TipoDiscapacidad)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.TipoVivienda)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.SeguridadSocial)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.NivielEscolaridad)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.EsJefeHogar)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.EstratiSocioEconomico)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.LocalidadTrabajo)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.JornadaTrabajo)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.TipoSubsidio)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>

                    <td>
                        @Html.DisplayFor(modelItem => item.NumeroDocumento)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.TipoDocumento)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Genero)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.OrientacionSexual)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Nombres)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Apellidos)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.IdentidadGenero)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Edad)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Etnia)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Telefono)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Localidad)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.EsVictimaConflictoA)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.EsDiscapacitado)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.TipoDiscapacidad)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.TipoVivienda)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.SeguridadSocial)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.NivielEscolaridad)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.EsJefeHogar)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.EstratiSocioEconomico)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.LocalidadTrabajo)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.JornadaTrabajo)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.TipoSubsidio)
                    </td>
                   
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id">Editar</a> |
                        <a asp-action="Details" asp-route-id="@item.Id">Detalles</a> |
                        <a asp-action="Delete" asp-route-id="@item.Id">Inactivar</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
